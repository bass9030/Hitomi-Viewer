        xmlns:local="clr-namespace:Hitomi_Viewer"
        mc:Ignorable="d"
        Title="Download_Window" Height="129.471" Width="633.663">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <Label x:Name="title" Grid.Row="0" Content="test" VerticalAlignment="Center" Margin="5 5 5 5" FontSize="20"/>
