<UserControl x:Class="Hitomi_Viewer.tag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hitomi_Viewer"
             mc:Ignorable="d" 
             d:DesignHeight="25">
    <Grid>
        <Border BorderThickness="1" CornerRadius="5" Background="Gray" x:Name="tagBackground">
            <Label x:Name="tagName" Content="tag:full__color" Foreground="White" VerticalAlignment="Center" FontSize="9"/>
        </Border>
    </Grid>
</UserControl>
